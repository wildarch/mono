{
    "manifest_version": 2,
    "name": "Robot",
    "version": "0.1",
    "description": "Automated interaction with web pages",
    "icons": {
        "48": "icons/border-48.png"
    },
    "permissions": [
        "webRequest"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://web.whatsapp.com/*"
            ],
            "js": [
                "build/content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false,
        "type": "module"
    }
}
